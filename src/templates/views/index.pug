extends ../layouts/_default

//-append styles
  
  style.
    .c-icon { width: 100%; height: auto }

block main

  +main()

    article(class='o-container u-py3')
      header
        h1=site.name
      p=site.description

      a(href='https://github.com/lanceguyatt/gulpstarter' target='_blank' class='u-black')
        +icon('github')

      //-
        div(class='u-flex u-flex-wrap')
          each icon in ['github', 'gulp', 'postcss', 'pug']
            div(class=' u-mb4 o-col-1-2 o-col-1-3-md o-col-1-4-lg')
              +icon(icon)(class='u-block')
